<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <CheckBox
        android:id="@+id/monday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/monday"
        android:button="@null"
        android:layout_marginStart="20dp" />

    <CheckBox
        android:id="@+id/tuesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tuesday"
        android:button="@null"
        android:layout_toEndOf="@id/monday"
        android:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/wednesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/wednesday"
        android:button="@null"
        android:layout_toEndOf="@id/tuesday"
        android:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/thursday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/thursday"
        android:button="@null"
        android:layout_toEndOf="@id/wednesday"
        android:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/friday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/friday"
        android:button="@null"
        android:layout_toEndOf="@id/thursday"
        android:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/saturday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/saturday"
        android:button="@null"
        android:layout_toEndOf="@id/friday"
        android:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/sunday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sunday"
        android:button="@null"
        android:layout_toEndOf="@id/saturday"
        android:layout_marginStart="15dp" />



</RelativeLayout>